{% extends 'base.html.twig' %}

{% block body %}
    <h1>City list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td><a href="{{ path('city_show', { 'id': city.id }) }}">{{ city.id }}</a></td>
                <td>{{ city.latitude }}</td>
                <td>{{ city.longitude }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('city_show', { 'id': city.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
